{ 
  "manifest_version": 2,
  "name": "YCharts Financial News Extension",
  "description": "Simple Chrome Extension Displaying a Table with Financial News",
  "version": "1.0",
  "icons": { 
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "YCharts",
    "default_popup": "background.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "http://*/",
    "https://*/"
  ]
}
